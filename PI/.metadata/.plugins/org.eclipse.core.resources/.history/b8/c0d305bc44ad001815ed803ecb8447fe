use src\Cargo;
use src\CargoRepositorio;
?>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>CPC68</title>
<link rel="stylesheet" href="style.css">
</head>
<body>
<div class="mainContainer" style="width: 600px;">
