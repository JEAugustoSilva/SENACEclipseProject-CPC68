        $this->Conexao->abrirConexao();
        $resultado = $this->Conexao->getConexao()->query(
            "SELECT COUNT(ID) AS QUANTIDADE FROM AMBIENTE WHERE IDUNIDADE = " . $idUnidade . " AND SITUACAO = 0;"
